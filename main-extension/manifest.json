{
  "manifest_version": 3,
  "name": "Legitly - Website Trust Score",
  "version": "1.0.0",
  "description": "Real-time website security analysis with interactive trust score visualization",
  "permissions": ["activeTab", "storage", "tabs", "webNavigation"],
  "host_permissions": ["https://rethu.app.n8n.cloud/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
